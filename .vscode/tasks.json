{
  "// CIO DIRECTIVE – PERMANENT FIX FOR DAILY NETWORK ERROR – NOV 20 2025": true,
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CIO CHECK – COMMIT SAFE",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "cio-check"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": [
        "$eslint-stylish",
        "$tsc"
      ],
      "detail": "CIO-mandated full validation: lint + typecheck + test (F5 hotkey)"
    },
    {
      "label": "Start DeliveryApp Full Stack (CIO-Approved)",
      "type": "shell",
      "command": "${workspaceFolder}/DeliveryAppMobile/scripts/start-mobile.bat",
      "windows": {
        "command": "${workspaceFolder}/DeliveryAppMobile/scripts/start-mobile.bat"
      },
      "linux": {
        "command": "bash",
        "args": [
          "${workspaceFolder}/DeliveryAppMobile/scripts/start-mobile.sh"
        ]
      },
      "osx": {
        "command": "bash",
        "args": [
          "${workspaceFolder}/DeliveryAppMobile/scripts/start-mobile.sh"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "default"
      },
      "detail": "CIO-mandated startup script that eliminates network errors by forcing tunnel mode"
    },
    {
      "label": "Kill All DeliveryApp Processes",
      "type": "shell",
      "command": "taskkill",
      "args": [
        "/f",
        "/im",
        "python.exe",
        "/im",
        "node.exe"
      ],
      "windows": {
        "command": "taskkill",
        "args": [
          "/f",
          "/im",
          "python.exe",
          "/im",
          "node.exe"
        ]
      },
      "linux": {
        "command": "pkill",
        "args": [
          "-f",
          "python|node|expo"
        ]
      },
      "osx": {
        "command": "pkill",
        "args": [
          "-f",
          "python|node|expo"
        ]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Emergency kill switch for stuck Django/Expo processes"
    },
    {
      "label": "Django Health Check",
      "type": "shell",
      "command": "curl",
      "args": [
        "-f",
        "http://localhost:8000/api/health/"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Quick health check for Django backend"
    },
    {
      "label": "Clean Expo Cache (Nuclear Option)",
      "type": "shell",
      "command": "npx",
      "args": [
        "expo",
        "install",
        "--fix"
      ],
      "options": {
        "cwd": "${workspaceFolder}/DeliveryAppMobile"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Nuclear cache clean when everything else fails"
    }
  ]
}